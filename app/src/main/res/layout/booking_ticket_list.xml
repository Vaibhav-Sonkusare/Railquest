<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="7dp"
    android:padding="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txtTrainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kyq Gtnr Express"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="5dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTrainNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="#15077"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtStartTimeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="8:00 PM, 30 Apr"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/txtTrainName"
            app:layout_constraintTop_toBottomOf="@+id/txtTrainName" />

        <TextView
            android:id="@+id/txtBoardingStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kamakhya (KYQ)"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/txtStartTimeDate"
            app:layout_constraintTop_toBottomOf="@+id/txtStartTimeDate" />

        <TextView
            android:id="@+id/txtDestinationStationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basti (BST)"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtBoardingStationName"
            app:layout_constraintEnd_toEndOf="@+id/txtPNR"
            app:layout_constraintTop_toTopOf="@+id/txtBoardingStationName" />

        <TextView
            android:id="@+id/txtPNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6245358422"
            android:textColor="#B53C3C"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/txtTrainNumber"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Booked On:"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtBoardingStationName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="39dp"
            android:layout_height="17dp"
            android:layout_marginEnd="10dp"
            android:text="PNR:"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtStartTimeDate"
            app:layout_constraintEnd_toStartOf="@+id/txtPNR"
            app:layout_constraintTop_toTopOf="@+id/txtStartTimeDate" />

        <TextView
            android:id="@+id/txtBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"

            android:layout_marginStart="10dp"
            android:text="18 Mar: 2024"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>